<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="tab_marketing_incentive" parent="Base.Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/color_ffffff</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabSelectedTextColor">@color/color_ffffff</item>
        <item name="tabTextColor">@color/color_ffffff</item>
        <item name="tabMode">scrollable</item>
        <item name="tabTextAppearance">@style/tab_marketing_incentive_text_size</item>
    </style>

    <style name="tab_marketing_incentive_text_size">
        <item name="android:textSize">16sp</item>
    </style>

</resources>
